// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "FiraFlott, Fira Code, 'Operator Mono', 'OperatorMono Nerd Font', Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.wordWrapColumn": 800,
  "editor.useTabStops": false,
  "editor.renderWhitespace": "all",
  "editor.fontSize": 12,
  "editor.lineHeight": 24,
  "editor.tabCompletion": "on",
  "editor.fontLigatures": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.autoIndent": "none",
  "editor.fontWeight": "400",
  "editor.quickSuggestionsDelay": 5,
  "editor.formatOnPaste": false,
  "editor.minimap.enabled": false,
  "workbench.colorTheme": "New Moon",
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "right",
  "workbench.activityBar.visible": true,
  "[php]": {
    "editor.tabSize": 4
  },
  "files.encoding": "utf8",
  "files.associations": {
    "*.vue": "vue",
    "*.gs": "javascript",
    ".stylelintrc": "json",
    "*.mdx": "mdx"
  },
  "files.autoSave": "off",
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    ".git": true,
    "**/.tmp": true,
    "**/node_modules": true,
    "**/*.zip": true,
    "**/*.tar": true,
    "**/*.gz": true,
    "**/*.nyc_output": true,
    "**/.sass-cache": true
  },
  "html.format.wrapLineLength": 160,
  "html.format.endWithNewline": true,
  "extensions.autoUpdate": true,
  "telemetry.enableTelemetry": false,
  "php-cs-fixer.onsave": false,
  "html.format.indentHandlebars": true,
  "emmet.triggerExpansionOnTab": true,
  "emmet.preferences": {
    "filter.commentAfter": "\n<!-- /[#ID][.CLASS] -->"
  },
  "emmet.includeLanguages": {
    "blade": "html",
    "html": "html",
    "erb": "html",
    "edge": "html",
    "javascript": "css",
    "ts": "javascript",
    "vue": "html",
    "gs": "javascript",
    "vue-html": "html",
    "ejs": "html"
  },
  "emmet.syntaxProfiles": {
    "javascript": "javascriptreact",
    "sass": "css",
    "gs": "javascript",
    "vue-html": "html",
    "vue": "html",
    "erb": "html"
  },
  "search.location": "panel",
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": false,
  "search.collapseResults": "alwaysCollapse",
  "search.exclude": {
    "**/build": true,
    ".temp": true,
    "temp": true,
    ".tmp": true,
    "tmp": true,
    "**/*.min.*": true,
    "**/bower": true,
    "**/.tmp": true,
    "**/_bower": true,
    "**/_site": true,
    "**/dev": true,
    "**/local": true,
    "**/prod": true,
    "**/.nuxt": true,
    "**/dist": true,
    "**/wp-admin": true,
    "**/wp-includes": true,
    "**/node_modules": true,
    "**/.sass-cache": true
  },
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "trailing-spaces.trimOnSave": true,
  "window.zoomLevel": 1,
  "material-icon-theme.showUpdateMessage": false,
  "typescript.check.npmIsInstalled": false,
  "extensions.ignoreRecommendations": true,
  "php-cs-fixer.executablePath": "/usr/local/bin/php-cs-fixer",
  "breadcrumbs.enabled": false,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "ts",
    "typescript",
    "javascriptreact",
    "vue"
  ],
  "scss.validate": false,
  "css.validate": false,
  "less.validate": false,
  "javascript.preferences.quoteStyle": "single",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.completeJSDocs": true,
  "javascript.format.enable": false,
  "javascript.autoClosingTags": true,
  "editor.insertSpaces": false,
  "stylelint.enable": false,
  "px2rem-plus.base": 16,
  "[scss]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.rendererType": "dom",
  "editor.formatOnSave": false,
  "editor.formatOnType": false,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "files.eol": "\n",
  "materialTheme.accent": "Cyan",
  "workbench.iconTheme": "material-icon-theme",
  "yarn.runInTerminal": true,
  "npm.packageManager": "yarn",
  "npm.bin": "yarn",
  "eslint.packageManager": "yarn",
  "workbench.colorCustomizations": {
    "window.activeBorder": "#212121",
    "window.inactiveBorder": "#787878",
    "activityBarBadge.background": "#00BCD4",
    "list.activeSelectionForeground": "#00BCD4",
    "list.inactiveSelectionForeground": "#00BCD4",
    "list.highlightForeground": "#00BCD4",
    "scrollbarSlider.activeBackground": "#00BCD450",
    "editorSuggestWidget.highlightForeground": "#00BCD4",
    "textLink.foreground": "#00BCD4",
    "progressBar.background": "#00BCD4",
    "pickerGroup.foreground": "#00BCD4",
    "tab.activeBorder": "#00BCD4",
    "notificationLink.foreground": "#00BCD4",
    "editorWidget.resizeBorder": "#00BCD4",
    "editorWidget.border": "#00BCD4",
    "settings.modifiedItemIndicator": "#00BCD4",
    "settings.headerForeground": "#00BCD4",
    "panelTitle.activeBorder": "#00BCD4",
    "breadcrumb.activeSelectionForeground": "#00BCD4",
    "menu.selectionForeground": "#00BCD4",
    "menubar.selectionForeground": "#00BCD4",
    "editor.findMatchBorder": "#00BCD4",
    "selection.background": "#00BCD440"
  },
  "git.ignoreMissingGitWarning": true,
  "eslint.enable": false,
  "px2rem-plus.comments": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "workbench.startupEditor": "newUntitledFile",
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false
  }
}
