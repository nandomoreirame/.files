{
  "php1": {
    "prefix": "php",
    "body": [
      "<?php",
      "${0}"
    ],
    "description": "php"
  },
  "php2": {
    "prefix": "php",
    "body": [
      "<?php ${0}; ?>"
    ],
    "description": "PHP Tags"
  },
  "phpe": {
    "prefix": "php:e",
    "body": [
      "<?= $1; ?>"
    ],
    "description": "PHP echo"
  },
  "prp": {
    "prefix": "prp",
    "body": [
      "echo '<pre>' . print_r( ${0}, true ) . '</pre>';"
    ],
    "description": "Print pre to debug"
  },
  "php:jdie": {
    "prefix": "php:jdie",
    "body": [
      "jdie(json_encode( $${1:data}, JSON_PRETTY_PRINT ));"
    ],
    "description": "convert and print array to json and die"
  },
  "php:var": {
    "prefix": "php:var",
    "body": [
      "$${1:var}"
    ],
    "description": "PHP Var"
  },
  "php:if": {
    "prefix": "php:if",
    "body": [
      "<?php if ($${1:var}): ?>",
      "<?php endif; ?>"
    ],
    "description": "PHP view if"
  },
  "php:if-else": {
    "prefix": "php:if",
    "body": [
      "<?php if ($${1:var}): ?>",
      "<?php else: ?>",
      "<?php endif; ?>"
    ],
    "description": "PHP view ifelse"
  },
  "php:class": {
    "prefix": "php:class",
    "body": [
      "namespace ${1:App};",
      "",
      "class ${2:ClassName}${3: extends AnotherClass}",
      "{",
      "${0}",
      "}",
      ""
    ],
    "description": "PHP class"
  },
  "php:namespace": {
    "prefix": "php:namespace",
    "body": [
      "namespace ${1:App};${0}",
      ""
    ],
    "description": "PHP namespace"
  },
  "php:function": {
    "prefix": "php:function",
    "body": [
      "public function ${1:__construct}()",
      "{",
      "${0}",
      "}",
      ""
    ],
    "description": "PHP function"
  }
}
