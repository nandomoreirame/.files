[alias]
  # Add
  a = add --all                         # add all
  ac = !git add --all && git commit -am # add all and commit with message

  # Commit
  ci = commit                           # commit
  cm = commit -am                       # commit with message
  amend = commit --amend                # ammend your last commit

  # Pull
  pl = pull
  up = pull --rebase --autostash

  # Checkout
  co = checkout
  cob = checkout -b

  # Push
  p = push

  # Status
  s = status -s

  # Diff
  df = diff --color --color-words --abbrev
  dt = difftool

  # Remotes
  remotes = remote -v

  # Branches
  branches = branch -av
  recent-branches = !git for-each-ref --count=5 --sort=-committerdate refs/heads/ --format='%(refname:short)'

  # Tags
  tags = tag -l
  tag = tag -a

  # Logs
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

  # Upstream
  set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`

  # flow
  # more information: http://haacked.com/archive/2014/07/28/github-flow-aliases/
  undo = reset HEAD~1 --mixed

[color]
  ui = always

[apply]
  whitespace = fix

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space
  editor = code-insiders
  autocrlf = input

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[mergetool "sublime"]
  cmd = sublime -w $MERGED
  trustExitCode = false

[merge]
  tool = Kaleidoscope
  log = false

[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

# Any GitHub repo with my username should be checked out r/w by default
# http://rentzsch.tumblr.com/post/564806957/public-but-hackable-git-submodules
[url "git@github.com:nandomoreirame/"]
  insteadOf = "git://github.com/nandomoreirame/"

[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[diff]
  tool = Kaleidoscope

[difftool]
  prompt = false

[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[mergetool]
  prompt = false

[push]
	default = current

